<Page x:Class="Data_Binding_Mironov.Pages.CreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Data_Binding_Mironov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="CreatePage">

    <StackPanel Height="250" 
                Width="400" 
                Background="LightGray"  
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
        
        <Label HorizontalAlignment="Center" 
               Height="30" 
               Content="Регистрация пациента"
               FontSize="16"/>
        
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Height="25" 
                   Content="Фамилия: " 
                   Grid.Row="0" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Имя: " 
                   Grid.Row="1" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Отчество: " 
                   Grid.Row="2" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Дата рождения: " 
                   Grid.Row="3" 
                   Grid.Column="0"/>

            <TextBox Text="{Binding LastName}"  
                     Width="200" 
                     Height="20"  
                     Grid.Row="0" 
                     Grid.Column="1"/>
            
            <TextBox Text="{Binding Name}" 
                     Width="200" 
                     Height="20"  
                     Grid.Row="1" 
                     Grid.Column="1"/>
            
            <TextBox Text="{Binding MiddleName}" 
                     Width="200" 
                     Height="20"  
                     Grid.Row="2" 
                     Grid.Column="1"/>

            <DatePicker Text="{Binding Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                        Width="200" 
                        Height="25"  
                        Grid.Row="3" 
                        Grid.Column="1"/>
        </Grid>
        
        <Button Click="Register"  
                Margin="5" 
                Width="150" 
                Content="Зарегистрировать"/>

        <Button Click="Back"  
                Margin="5" 
                Width="150" 
                Content="Вернуться"/>
    </StackPanel>
</Page>
