<Page x:Class="Data_Binding_Mironov.Pages.ChangePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Data_Binding_Mironov.Pages"
      mc:Ignorable="d" 
      xmlns:converters="clr-namespace:Data_Binding_Mironov.Converters"
      xmlns:validators="clr-namespace:Data_Binding_Mironov.ValidationRules"
      d:DesignHeight="350" 
      d:DesignWidth="500"
      Title="ChangePatientPage">

    <StackPanel Width="500" 
                Height="350" 
                Background="lightGray" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
        
        <Label HorizontalAlignment="Center" 
               Height="30" 
               Content="Изменить пациента"
               FontSize="16"/>
        
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Height="25"
                   Content="Фамилия: " 
                   Grid.Row="0" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Имя: " 
                   Grid.Row="1" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Отчество: " 
                   Grid.Row="2" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Дата рождения: " 
                   Grid.Row="3" 
                   Grid.Column="0"/>

            <Label Height="25" 
                   Content="Номер телефона: " 
                   Grid.Row="4" 
                   Grid.Column="0"/>

            <StackPanel Grid.Row="0" 
                        Grid.Column="1">
                <TextBox x:Name="LastNameBox"
                         Width="200"
                         Height="25"
                         Margin="10">
                    <TextBox.Text>
                        <Binding Path="LastName"
                                 Mode="TwoWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" 
                              FontSize="12" 
                              ItemsSource="{Binding ElementName=LastNameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ErrorContent}" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        Grid.Column="1">
                <TextBox x:Name="NameBox"
                         Width="200"
                         Height="25"
                         Margin="10">
                    <TextBox.Text>
                        <Binding Path="Name"
                                 Mode="TwoWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" 
                              FontSize="12" 
                              ItemsSource="{Binding ElementName=NameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ErrorContent}" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Grid.Column="1">
                <TextBox x:Name="MiddleNameBox"
                         Width="200"
                         Height="25"
                         Margin="10">
                    <TextBox.Text>
                        <Binding Path="MiddleName"
                                 Mode="TwoWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:MainValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" 
                              FontSize="12" 
                              ItemsSource="{Binding ElementName=MiddleNameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ErrorContent}" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="3" 
                        Grid.Column="1">
                <DatePicker x:Name="DateP1"
                            Width="200" 
                            Height="25">
                    <DatePicker.SelectedDate>
                        <Binding Path="Birthday" 
                                 UpdateSourceTrigger="PropertyChanged"
                                 Mode="TwoWay">
                            <Binding.ValidationRules>
                                <validators:DateValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>
                <ItemsControl Foreground="Red" 
                              FontSize="12" 
                              ItemsSource="{Binding ElementName=DateP1, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ErrorContent}" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="4" 
                        Grid.Column="1">
                <TextBox x:Name="NumberBox"
                         Width="200" 
                         Height="25"
                         Margin="10">
                    <TextBox.Text>
                        <Binding Path="NumberPhone" 
                                 UpdateSourceTrigger="PropertyChanged"
                                 Mode="TwoWay">
                            <Binding.ValidationRules>
                                <validators:NumberValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red" 
                              FontSize="12" 
                              ItemsSource="{Binding ElementName=NumberBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       Text="{Binding ErrorContent}" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        
        <Button Click="Change" 
                Margin="5" 
                Width="200" 
                Content="Изменить"/>
        
        <Button Click="Back" 
                Margin="5"
                Width="200"
                Content="Вернуться"/>
        
    </StackPanel>
</Page>
