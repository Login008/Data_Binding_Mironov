<Page x:Class="Data_Binding_Mironov.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Data_Binding_Mironov.Pages"
      xmlns:converters="clr-namespace:Data_Binding_Mironov.Converters"
      xmlns:validators="clr-namespace:Data_Binding_Mironov.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="500"
      Title="MainPage">

    <Page.Resources>
        <converters:NumberConverter x:Key="numberConverter"/>
    </Page.Resources>

    <StackPanel Width="500" 
                Height="450" 
                Background="LightSteelBlue" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Grid.Row="2" 
                Grid.Column="0">
        
        <Label HorizontalAlignment="Center" 
               Height="30" 
               Content="Текущий пользователь"
               FontSize="16"/>

        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Height="25" 
                   Content="Фамилия: " 
                   Grid.Row="0" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Имя: " 
                   Grid.Row="1" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Отчество: " 
                   Grid.Row="2" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Специализация: " 
                   Grid.Row="3" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Пароль: " 
                   Grid.Row="4" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="{Binding Doctor.LastName,  UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Row="0" 
                   Grid.Column="1"/>
            
            <Label Height="25" 
                   Content="{Binding Doctor.Name,  UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Row="1" 
                   Grid.Column="1"/>
            
            <Label Height="25" 
                   Content="{Binding Doctor.MiddleName,  UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Row="2" 
                   Grid.Column="1"/>
            
            <Label Height="25" 
                   Content="{Binding Doctor.Specialisation,  UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Row="3" 
                   Grid.Column="1"/>
            
            <Label Height="25" 
                   Content="{Binding Doctor.Password, UpdateSourceTrigger=PropertyChanged}" 
                   Grid.Row="4" 
                   Grid.Column="1"/>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Height="50">

            <Button Click="CreatePacient"  
                    Margin="5" 
                    Width="150" 
                    Content="Создать пациента"
                    Height="25"/>
            
            <Button Click="Accepting"  
                    Margin="5" 
                    Width="150" 
                    Content="Начать приём"
                    Height="25"/>
            
            <Button Click="ChangePacient"  
                    Margin="5" 
                    Width="150" 
                    Height="25"
                    Content="Изменить информацию"/>
        </StackPanel>
        
        <ListView ItemsSource="{Binding pacientList}" 
                  SelectedItem="{Binding SelectedPacient}"  
                  Width="450" 
                  Height="200"
                  Margin="10">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding LastName}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: "/>
                            <TextBlock Text="{Binding MiddleName}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата рождения: "/>
                            <TextBlock Text="{Binding Birthday}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Номер телефона: "/>
                            <TextBlock Text="{Binding NumberPhone, Converter={StaticResource numberConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
