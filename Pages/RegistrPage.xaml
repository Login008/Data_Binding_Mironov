<Page x:Class="Data_Binding_Mironov.Pages.RegistrPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Data_Binding_Mironov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" 
      d:DesignWidth="500"
      Title="RegistrPage">

    <StackPanel Height="300"
                Width="500"
                Background="LightSteelBlue"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

        <Label HorizontalAlignment="Center" 
               Height="30" 
               Content="Регистрация пользователя"
               FontSize="16"/>
        
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Height="25"
                   Content="Фамилия: " 
                   Grid.Row="0" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Имя: " 
                   Grid.Row="1" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Отчество: " 
                   Grid.Row="2" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Специализация: " 
                   Grid.Row="3" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Пароль: " 
                   Grid.Row="4" 
                   Grid.Column="0"/>
            
            <Label Height="25" 
                   Content="Подтверждение пароля: " 
                   Grid.Row="5" 
                   Grid.Column="0"/>

            <TextBox Text="{Binding LastName}"  
                     Width="200" 
                     Height="20"
                     Margin="5"
                     Grid.Row="0" 
                     Grid.Column="1" />
            
            <TextBox Text="{Binding Name}"   
                     Width="200" 
                     Height="20"  
                     Grid.Row="1" 
                     Grid.Column="1"
                     Margin="5"/>
            
            <TextBox Text="{Binding MiddleName}"  
                     Width="200" 
                     Height="20"  
                     Grid.Row="2" 
                     Margin="5"
                     Grid.Column="1"/>
            
            <TextBox Text="{Binding Specialisation}"  
                     Width="200" 
                     Height="20"  
                     Grid.Row="3" 
                     Margin="5"
                     Grid.Column="1"/>
            
            <TextBox Text="{Binding Password}"  
                     Width="200" 
                     Height="20"  
                     Margin="5"
                     Grid.Row="4" 
                     Grid.Column="1"/>
            
            <TextBox Name="DoubleCheckingTextBox" 
                     Width="200" 
                     Height="20"  
                     Grid.Row="5" 
                     Margin="5"
                     Grid.Column="1"/>
        </Grid>
        
        <Button Click="Registration"  
                Margin="10" 
                Width="150" 
                Content="Зарегистрироваться"/>
        
        <Button Click="Back"  
                Margin="5" 
                Width="150" 
                Content="Назад"/>
    </StackPanel>
</Page>
