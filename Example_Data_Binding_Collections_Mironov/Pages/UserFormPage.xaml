<Page x:Class="Example_Data_Binding_Collections_Mironov.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Example_Data_Binding_Collections_Mironov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserFormPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <Label Content="ID"/>
            <Label Content="Имя"/>
            <Label Content="Адрес электронной почты"/>
            <Label Content="Возраст"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <TextBox Margin="5" 
                     Text="{Binding Id}"/>
            <TextBox Margin="5" 
                     Text="{Binding Name}"/>
            <TextBox Margin="5" 
                     Text="{Binding Email}"/>
            <TextBox Margin="5" 
                     Text="{Binding Age}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1">
            <Button Content="Сохранить"
                    Margin="5"
                    Click="SaveButton_Click"/>
            <Button Content="Назад"
                    Margin="5"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
