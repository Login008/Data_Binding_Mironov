<Window x:Class="Data_Binding_Mironov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_Binding_Mironov"
        mc:Ignorable="d"
        Title="Окно приёма пациента" Height="510" Width="800">

    <StackPanel>
        <Frame x:Name="MainFrame" 
               Height="450" 
               Width="800"
               NavigationUIVisibility="Hidden"/>
        
        <StackPanel Background="LightSlateGray" 
                    Orientation="Horizontal">
            
            <Label  VerticalAlignment="Center" 
                    Content="Количество пользователей:"/>
            
            <Label VerticalAlignment="Center" 
                   Content="{Binding DoctorCount,  UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label VerticalAlignment="Center" 
                   Content="Количество пациентов:"/>
            
            <Label VerticalAlignment="Center" 
                   Content="{Binding PatientCount,  UpdateSourceTrigger=PropertyChanged}"/>
            
        </StackPanel>
    </StackPanel>
</Window>